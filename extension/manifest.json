{
  "manifest_version": 3,
  "name": "Multi-language Pronunciation Helper",
  "version": "1.0",
  "description": "为多语言文本添加发音提示",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/modules/settings.js",
        "data/en/uk_pron.js",
        "data/en/us_pron.js",
        "content/modules/languageDetector.js",
        "content/modules/pronunciationService.js",
        "content/modules/domHandler.js",
        "content/modules/textProcessor.js",
        "content/modules/eventHandlers.js",
        "content/modules/styles.js",
        "content/content.js"
      ],
      "css": ["content/styles.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "data/en/data.json",
      "data/ja/ipa.json",
      "data/ko/ipa.json"
    ],
    "matches": ["<all_urls>"]
  }]
}