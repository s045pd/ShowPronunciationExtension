{
  "manifest_version": 3,
  "name": "Multi-language Pronunciation Helper",
  "version": "1.0",
  "description": "为多语言文本添加发音提示",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [

        "content/content.js"
      ],
      "css": ["content/styles.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "data/en/uk.json",
      "data/en/us.json",
      "data/ja/pronunciations.json",
      "data/ko/pronunciations.json"
    ],
    "matches": ["<all_urls>"]
  }]
}